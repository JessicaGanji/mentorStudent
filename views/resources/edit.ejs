<section class="row background">
  <div class="col-md-3"></div>

  <section class="col-md-6 round-form">
    <h3>Add a New Resource</h3>

    <form method="post" action="/resources/<%= resource._id %>">
      <input type="hidden" name="_method" value="put">

      <div class="form-group">
        <label for="name">name</label>
        <input class="form-control" type="text" value="<%= resource.name %>"  name="name" id="name">
      </div>

      <div class="form-group">
        <label for="format">format</label>
        <input class="form-control" type="text" value="<%= resource.format %>" name="format" id="format">
      </div>

      <div class="form-group">
        <label for="description">description</label>
        <input class="form-control" type="text" value="<%= resource.description %>" name="description" id="description">
      </div>

      <div class="form-group">
        <label for="link">link</label>
        <input class="form-control" type="text" value="<%= resource.link %>" name="link" id="link">
      </div>

      <div class="form-group">
        <label for="pros">pros</label>
        <input class="form-control" type="text" value="<%= resource.pros %>" name="pros" id="pros">
      </div>

      <div class="form-group">
        <label for="cons">cons</label>
        <input class="form-control" type="text" value="<%= resource.cons %>" name="cons" id="cons">
      </div>

      <input class="btn btn-default" type="submit">
    </form>
  </section>

  <div class="col-md-3"></div>
</section>