<section class="row background">
  <div class="col-md-3"></div>

  <section class="col-md-6 round-form">
    <h3>Add a New Resource</h3>

    <form method="post" action="/resources/new">

      <div class="form-group">
        <label for="name">name</label>
        <input class="form-control" type="text" name="name" id="name">
      </div>

      <div class="form-group">
        <label for="format">format</label>
        <input class="form-control" type="text" name="format" id="format">
      </div>

      <div class="form-group">
        <label for="description">description</label>
        <input class="form-control" type="text" name="description" id="description">
      </div>

      <div class="form-group">
        <label for="link">link</label>
        <input class="form-control" type="text" name="link" id="link">
      </div>

      <div class="form-group">
        <label for="pros">pros</label>
        <input class="form-control" type="text" name="pros" id="pros">
      </div>

      <div class="form-group">
        <label for="cons">cons</label>
